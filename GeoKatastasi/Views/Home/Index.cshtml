@model GeoKatastasi.Models.Location
<script src="~/Scripts/jquery-3.3.1.js"></script>

<div class="wrapper">


    <div id="map" style="width:100%;height:400px;"></div>

</div>

<script>

    var map, infoWindow;

    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: new google.maps.LatLng(2.8,-187.3),
            zoom: 6
        });
        infoWindow = new google.maps.InfoWindow;

        // Try HTML5 geolocation.
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function (position) {
                var pos = {
                    lat: position.coords.latitude,
                    lng: position.coords.longitude
                };

                //console.log(pos.lng);

                //$.ajax({
                //    type: "POST",
                //    url: '/Home/Location',
                //    dataType: "JSON",
                //    data: JSON.stringify({ lat: pos.lat, lng: pos.lng }),
                //    contentType: "application/json;charset=utf-8;",
                //    traditional: true
                //});

                infoWindow.setPosition(pos);
                infoWindow.setContent('Location found.');
                infoWindow.open(map);
                map.setCenter(pos);
            }, function () {
                handleLocationError(true, infoWindow, map.getCenter());
            });
        } else {
            // Browser doesn't support Geolocation
            handleLocationError(false, infoWindow, map.getCenter());
        }
    }

    $.getJSON("GetLocation",
        function (json) {
            for (var i = 0; i < json.length; i++) {
                let marker = new google.maps.Marker({
                    map: map,
                    position: new google.maps.LatLng(json[i].latitude, json[i].longitude),
                    title: 'Location' + (i+1)
                })
            }
        }
    );


    function handleLocationError(browserHasGeolocation, infoWindow, pos) {
        infoWindow.setPosition(pos);
        infoWindow.setContent(browserHasGeolocation ?
            'Error: The Geolocation service failed.' :
            'Error: Your browser doesn\'t support geolocation.');
        infoWindow.open(map);
    }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=(MY_KEY)&callback=initMap"></script>
